{
  "manifest_version": 3,
  "name": "Bluemine",
  "description": "Opt-in UX improvements for Redmine.",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_title": "Bluemine Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "scripts": ["lib/browser-polyfill.js", "background/service-worker.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/projects/*/agile/board*",
        "http://*/projects/*/agile/board*"
      ],
      "js": ["lib/browser-polyfill.js", "content/scroll-restore-overlay.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["lib/browser-polyfill.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "bluemine@bluemine.extension",
      "strict_min_version": "121.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
